<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Cloud Backend</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #0f0f1e;
            color: #e0e0e0;
        }

        .header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 20px 40px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.3);
        }

        .header h1 {
            color: white;
            font-size: 28px;
        }

        .header .user-info {
            color: rgba(255,255,255,0.9);
            margin-top: 5px;
            font-size: 14px;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 30px;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: #1a1a2e;
            border-radius: 12px;
            padding: 25px;
            border: 1px solid #2a2a3e;
            transition: transform 0.2s, box-shadow 0.2s;
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(102, 126, 234, 0.3);
        }

        .stat-card h3 {
            color: #667eea;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 10px;
        }

        .stat-card .value {
            font-size: 36px;
            font-weight: bold;
            color: white;
        }

        .tabs {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
            border-bottom: 2px solid #2a2a3e;
        }

        .tab {
            padding: 12px 24px;
            background: transparent;
            border: none;
            color: #888;
            cursor: pointer;
            font-size: 16px;
            transition: all 0.3s;
            border-bottom: 3px solid transparent;
        }

        .tab.active {
            color: #667eea;
            border-bottom-color: #667eea;
        }

        .tab:hover {
            color: #667eea;
        }

        .tab-content {
            display: none;
        }

        .tab-content.active {
            display: block;
        }

        .table-container {
            background: #1a1a2e;
            border-radius: 12px;
            overflow: hidden;
            border: 1px solid #2a2a3e;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th {
            background: #2a2a3e;
            padding: 15px;
            text-align: left;
            color: #667eea;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 12px;
            letter-spacing: 1px;
        }

        td {
            padding: 15px;
            border-top: 1px solid #2a2a3e;
        }

        tr:hover {
            background: rgba(102, 126, 234, 0.1);
        }

        .btn {
            padding: 8px 16px;
            border-radius: 6px;
            border: none;
            cursor: pointer;
            font-size: 14px;
            transition: all 0.3s;
            margin-right: 5px;
        }

        .btn-primary {
            background: #667eea;
            color: white;
        }

        .btn-primary:hover {
            background: #5568d3;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(102, 126, 234, 0.4);
        }

        .btn-secondary {
            background: #764ba2;
            color: white;
        }

        .btn-secondary:hover {
            background: #653a8a;
        }

        .btn-danger {
            background: #e74c3c;
            color: white;
        }

        .btn-danger:hover {
            background: #c0392b;
        }

        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.8);
            z-index: 1000;
            align-items: center;
            justify-content: center;
        }

        .modal.active {
            display: flex;
        }

        .modal-content {
            background: #1a1a2e;
            border-radius: 12px;
            padding: 30px;
            max-width: 600px;
            width: 90%;
            max-height: 80vh;
            overflow-y: auto;
            border: 1px solid #2a2a3e;
        }

        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .modal-header h2 {
            color: #667eea;
        }

        .close-btn {
            background: none;
            border: none;
            color: #888;
            font-size: 24px;
            cursor: pointer;
        }

        .close-btn:hover {
            color: #e74c3c;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #888;
            font-size: 14px;
        }

        .form-group input,
        .form-group select {
            width: 100%;
            padding: 12px;
            background: #0f0f1e;
            border: 1px solid #2a2a3e;
            border-radius: 6px;
            color: white;
            font-size: 14px;
        }

        .form-group input:focus,
        .form-group select:focus {
            outline: none;
            border-color: #667eea;
        }

        pre {
            background: #0f0f1e;
            padding: 20px;
            border-radius: 8px;
            overflow-x: auto;
            border: 1px solid #2a2a3e;
            color: #e0e0e0;
            font-size: 12px;
            line-height: 1.5;
        }

        .badge {
            display: inline-block;
            padding: 4px 12px;
            border-radius: 12px;
            font-size: 12px;
            font-weight: 600;
        }

        .badge-admin {
            background: #667eea;
            color: white;
        }

        .badge-user {
            background: #2a2a3e;
            color: #888;
        }

        .loading {
            text-align: center;
            padding: 40px;
            color: #888;
        }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #888;
        }

        .empty-state svg {
            width: 80px;
            height: 80px;
            margin-bottom: 20px;
            opacity: 0.3;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>ðŸ”§ Cloud Admin Dashboard</h1>
        <div class="user-info">Logged in as: <strong><%= user.username %></strong></div>
    </div>

    <div class="container">
        <!-- Statistics -->
        <div class="stats-grid" id="stats">
            <div class="stat-card">
                <h3>Total Users</h3>
                <div class="value" id="stat-users">-</div>
            </div>
            <div class="stat-card">
                <h3>Total Files</h3>
                <div class="value" id="stat-files">-</div>
            </div>
            <div class="stat-card">
                <h3>Storage Used</h3>
                <div class="value" id="stat-storage">-</div>
            </div>
            <div class="stat-card">
                <h3>24h Activity</h3>
                <div class="value" id="stat-activity">-</div>
            </div>
        </div>

        <!-- Tabs -->
        <div class="tabs">
            <button class="tab active" onclick="switchTab('users')">Users</button>
            <button class="tab" onclick="switchTab('files')">Files</button>
            <button class="tab" onclick="switchTab('activity')">Activity Log</button>
        </div>

        <!-- Users Tab -->
        <div class="tab-content active" id="users-tab">
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Username</th>
                            <th>Role</th>
                            <th>Files</th>
                            <th>Storage</th>
                            <th>Limits</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="users-table">
                        <tr><td colspan="7" class="loading">Loading...</td></tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Files Tab -->
        <div class="tab-content" id="files-tab">
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>User</th>
                            <th>Filename</th>
                            <th>Version</th>
                            <th>Size</th>
                            <th>Uploaded</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="files-table">
                        <tr><td colspan="7" class="loading">Loading...</td></tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Activity Tab -->
        <div class="tab-content" id="activity-tab">
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Time</th>
                            <th>User</th>
                            <th>Action</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody id="activity-table">
                        <tr><td colspan="4" class="loading">Loading...</td></tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Edit Limits Modal -->
    <div class="modal" id="limits-modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Edit User Limits</h2>
                <button class="close-btn" onclick="closeModal('limits-modal')">&times;</button>
            </div>
            <form id="limits-form">
                <input type="hidden" id="edit-user-id">
                <div class="form-group">
                    <label>Username</label>
                    <input type="text" id="edit-username" disabled>
                </div>
                <div class="form-group">
                    <label>Max Versions</label>
                    <input type="number" id="edit-max-versions" min="1" max="100" required>
                </div>
                <div class="form-group">
                    <label>Max Storage (MB)</label>
                    <input type="number" id="edit-max-storage" min="1" max="10000" required>
                </div>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </form>
        </div>
    </div>

    <!-- View File Modal -->
    <div class="modal" id="file-modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 id="file-modal-title">File Content</h2>
                <button class="close-btn" onclick="closeModal('file-modal')">&times;</button>
            </div>
            <pre id="file-content">Loading...</pre>
        </div>
    </div>

    <script>
        const API_BASE = '/api/admin';

        // Fetch with session (credentials: 'include' sends cookies)
        async function fetchAPI(endpoint, options = {}) {
            const res = await fetch(API_BASE + endpoint, {
                ...options,
                credentials: 'include' // Important: sends session cookie
            });
            if (!res.ok) {
                if (res.status === 401 || res.status === 403) {
                    window.location.href = '/api/admin/login';
                }
                throw new Error('API request failed');
            }
            return res.json();
        }

        // Load statistics
        async function loadStats() {
            try {
                const stats = await fetchAPI('/stats');
                document.getElementById('stat-users').textContent = stats.total_users;
                document.getElementById('stat-files').textContent = stats.total_files;
                document.getElementById('stat-storage').textContent = (stats.total_size / (1024 * 1024)).toFixed(2) + ' MB';
                document.getElementById('stat-activity').textContent = stats.recent_activity;
            } catch (err) {
                console.error('Failed to load stats:', err);
            }
        }

        // Load users
        async function loadUsers() {
            try {
                const data = await fetchAPI('/users');
                const tbody = document.getElementById('users-table');
                
                if (data.users.length === 0) {
                    tbody.innerHTML = '<tr><td colspan="7" class="empty-state">No users found</td></tr>';
                    return;
                }

                tbody.innerHTML = data.users.map(user => `
                    <tr>
                        <td>${user.id}</td>
                        <td>${user.username}</td>
                        <td><span class="badge badge-${user.role}">${user.role}</span></td>
                        <td>${user.file_count || 0}</td>
                        <td>${((user.total_size || 0) / 1024).toFixed(2)} KB</td>
                        <td>${user.max_versions || 3} versions / ${user.max_storage_mb || 100} MB</td>
                        <td>
                            <button class="btn btn-primary" onclick="editLimits(${user.id}, '${user.username}', ${user.max_versions || 3}, ${user.max_storage_mb || 100})">
                                Edit Limits
                            </button>
                        </td>
                    </tr>
                `).join('');
            } catch (err) {
                console.error('Failed to load users:', err);
            }
        }

        // Load files
        async function loadFiles() {
            try {
                const data = await fetchAPI('/files');
                const tbody = document.getElementById('files-table');
                
                if (data.files.length === 0) {
                    tbody.innerHTML = '<tr><td colspan="7" class="empty-state">No files found</td></tr>';
                    return;
                }

                tbody.innerHTML = data.files.map(file => `
                    <tr>
                        <td>${file.id}</td>
                        <td>${file.username}</td>
                        <td>${file.filename}</td>
                        <td>v${file.version}</td>
                        <td>${(file.size / 1024).toFixed(2)} KB</td>
                        <td>${new Date(file.created_at).toLocaleString()}</td>
                        <td>
                            <button class="btn btn-secondary" onclick="viewFile(${file.id}, '${file.filename}')">
                                View
                            </button>
                        </td>
                    </tr>
                `).join('');
            } catch (err) {
                console.error('Failed to load files:', err);
            }
        }

        // Load activity
        async function loadActivity() {
            try {
                const data = await fetchAPI('/activity');
                const tbody = document.getElementById('activity-table');
                
                if (data.activity.length === 0) {
                    tbody.innerHTML = '<tr><td colspan="4" class="empty-state">No activity logged</td></tr>';
                    return;
                }

                tbody.innerHTML = data.activity.map(log => `
                    <tr>
                        <td>${new Date(log.created_at).toLocaleString()}</td>
                        <td>${log.username || 'System'}</td>
                        <td>${log.action}</td>
                        <td>${log.details || '-'}</td>
                    </tr>
                `).join('');
            } catch (err) {
                console.error('Failed to load activity:', err);
            }
        }

        // Switch tabs
        function switchTab(tab) {
            document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
            
            event.target.classList.add('active');
            document.getElementById(tab + '-tab').classList.add('active');
            
            if (tab === 'users') loadUsers();
            else if (tab === 'files') loadFiles();
            else if (tab === 'activity') loadActivity();
        }

        // Edit limits
        function editLimits(userId, username, maxVersions, maxStorage) {
            document.getElementById('edit-user-id').value = userId;
            document.getElementById('edit-username').value = username;
            document.getElementById('edit-max-versions').value = maxVersions;
            document.getElementById('edit-max-storage').value = maxStorage;
            document.getElementById('limits-modal').classList.add('active');
        }

        // Save limits
        document.getElementById('limits-form').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const userId = document.getElementById('edit-user-id').value;
            const maxVersions = document.getElementById('edit-max-versions').value;
            const maxStorage = document.getElementById('edit-max-storage').value;
            
            try {
                const res = await fetch(`${API_BASE}/users/${userId}/limits`, {
                    method: 'PUT',
                    credentials: 'include',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        max_versions: parseInt(maxVersions),
                        max_storage_mb: parseInt(maxStorage)
                    })
                });
                
                if (res.ok) {
                    alert('Limits updated successfully!');
                    closeModal('limits-modal');
                    loadUsers();
                } else {
                    alert('Failed to update limits');
                }
            } catch (err) {
                alert('Error: ' + err.message);
            }
        });

        // View file
        async function viewFile(fileId, filename) {
            document.getElementById('file-modal-title').textContent = filename;
            document.getElementById('file-content').textContent = 'Loading...';
            document.getElementById('file-modal').classList.add('active');
            
            try {
                const data = await fetchAPI(`/files/${fileId}/content`);
                document.getElementById('file-content').textContent = data.content;
            } catch (err) {
                document.getElementById('file-content').textContent = 'Error loading file: ' + err.message;
            }
        }

        // Close modal
        function closeModal(modalId) {
            document.getElementById(modalId).classList.remove('active');
        }

        // Initialize
        loadStats();
        loadUsers();
        setInterval(loadStats, 30000); // Refresh stats every 30s
    </script>
</body>
</html>
